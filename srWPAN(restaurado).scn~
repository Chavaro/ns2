# ====== SCENARIO =======
# Nodes 11.
# 	-> Sink 	1
#	-> Coordinators	3
#	-> Devices	7
# Area 50m*50m
# Neighbor distance	10m aprox
# TxRange		15m
# MaxSpeed		10.0 m/s
# Duration 		99s
# Traffic 		FTP/CBR/Poisson
# Beacon mode		Enabled
#  -> Beacon Order	3
#  -> Superframe Order	3
# Data Tx 		Direct and Indirect
#

# ======== INITIAL POSITIONS =============
## SINK ##
$node_(0) set X_ 30
$node_(0) set Y_ 40
$node_(0) set Z_ 0.000000000000

## COORDINATORS ##
$node_(1) set X_ 30
$node_(1) set Y_ 30
$node_(1) set Z_ 0.000000000000

$node_(2) set X_ 23
$node_(2) set Y_ 23
$node_(2) set Z_ 0.000000000000

$node_(3) set X_ 37
$node_(3) set Y_ 23
$node_(3) set Z_ 0.000000000000

## MOBILE NODES ##
$node_(4) set X_ 18.75
$node_(4) set Y_ 18.75
$node_(4) set Z_ 0.000000000000

$node_(5) set X_ 27.24
$node_(5) set Y_ 27.24
$node_(5) set Z_ 0.000000000000


$node_(6) set X_ 32.75
$node_(6) set Y_ 27.24
$node_(6) set Z_ 0.000000000000

$node_(7) set X_ 41.24
$node_(7) set Y_ 18.75
$node_(7) set Z_ 0.000000000000

$node_(8) set X_ 16
$node_(8) set Y_ 16
$node_(8) set Z_ 0.000000000000

$node_(9) set X_ 30
$node_(9) set Y_ 16
$node_(9) set Z_ 0.000000000000

$node_(10) set X_ 44
$node_(10) set Y_ 16
$node_(10) set Z_ 0.000000000000

################ MOVEMENTS ##################
$ns_ at 5.00 "$node_(4) setdest 23 27.24 3.0"
$ns_ at 10.0 "$node_(4) setdest 18.75 18.75 3.0"

$ns_ at 5.00 "$node_(5) setdest 23 18.75 3.0"
$ns_ at 10.0 "$node_(5) setdest 27.24 27.24 3.0"

$ns_ at 5.00 "$node_(6) setdest 37 18.75 3.0"
$ns_ at 10.00 "$node_(6) setdest 32.75 27.24 3.0"

$ns_ at 5.00 "$node_(7) setdest 37 27.24 3.0"
$ns_ at 10.00 "$node_(7) setdest 41.24 18.75 3.0"

$ns_ at 5.00 "$node_(8) setdest 35 45 10.0"
$ns_ at 5.00 "$node_(8) setdest 35 45 10.0"

$ns_ at 5.00 "$node_(8) setdest 35 45 10.0"
$ns_ at 5.00 "$node_(8) setdest 35 45 10.0"
